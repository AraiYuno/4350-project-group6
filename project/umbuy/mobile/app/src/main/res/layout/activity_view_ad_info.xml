<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.team6.umbuy.presentation.ViewAdInfoActivity"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/view_ad_info_picture"
        android:layout_gravity="center"
    />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/view_ad_info_title"
        android:text="Title"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
    />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/view_ad_info_category"
        android:text="Category"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/view_ad_info_price"
        android:text="Price"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
    />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/view_ad_info_description"
        android:text="Price"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
    />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/view_ad_info_delete_btn"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Delete" />

        <Button
            android:id="@+id/view_ad_info_edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Edit" />
    </LinearLayout>

</LinearLayout>
